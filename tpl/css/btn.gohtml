  font-size: 1.38vh;
  line-height: 1;
  outline: 0;
  padding: .38vh;
  text-align: center;
  text-decoration: none;
  transition: all .2s ease;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  vertical-align: middle;
  white-space: nowrap;
}
.btn:focus {
  box-shadow: 0 0 0 .14vh var(--dark);
}
.btn:focus,.btn:hover {
  background:  var(--gray);
  border-color: var(--dark-gray);
  text-decoration: none;
}
.btn.active,.btn:active {
